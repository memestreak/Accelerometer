<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="X:"
            android:id="@+id/textX"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Y:"
            android:id="@+id/textY"
            android:layout_below="@+id/textX"
            android:layout_alignLeft="@+id/textX"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Z:"
            android:id="@+id/textZ"
            android:layout_below="@+id/textY"
            android:layout_alignLeft="@+id/textY"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewX"
            android:layout_above="@+id/textViewY"
            android:layout_toRightOf="@+id/textX"
            android:layout_marginLeft="11dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewY"
            android:layout_alignTop="@+id/textY"
            android:layout_alignLeft="@+id/textViewX"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewZ"
            android:layout_below="@+id/textViewY"
            android:layout_alignLeft="@+id/textViewY"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Max X:"
            android:id="@+id/maxXLabel"
            android:layout_above="@+id/textViewY"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Max Y:"
            android:id="@+id/maxYlabel"
            android:layout_alignTop="@+id/textViewY"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Max Z:"
            android:id="@+id/maxZlabel"
            android:layout_below="@+id/maxYlabel"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewMaxX"
            android:layout_above="@+id/textViewMaxY"
            android:layout_alignLeft="@+id/textViewMaxY"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewMaxY"
            android:layout_alignTop="@+id/maxYlabel"
            android:layout_toRightOf="@+id/maxYlabel"
            android:layout_marginLeft="11dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewMaxZ"
            android:layout_below="@+id/textViewMaxY"
            android:layout_alignLeft="@+id/textViewMaxY"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vector:"
            android:id="@+id/textViewVectorLabel"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/textZ"
            android:layout_alignRight="@+id/textViewZ"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewVector"
            android:layout_above="@+id/textView"
            android:layout_alignLeft="@+id/maxZlabel"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vector Max:"
            android:id="@+id/textView"
            android:layout_below="@+id/textViewVectorLabel"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vector Min:"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewVectorMax"
            android:layout_alignTop="@+id/textView"
            android:layout_alignLeft="@+id/textViewVector"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0.0"
            android:id="@+id/textViewVectorMin"
            android:layout_below="@+id/textViewVectorMax"
            android:layout_alignLeft="@+id/textViewVectorMax"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/buttonReset"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textViewVectorLabel"/>

</RelativeLayout>
